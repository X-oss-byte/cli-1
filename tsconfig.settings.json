{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "pretty": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false, // Needed to compile tap and ansi-escapes
    "composite": true
  }
}
